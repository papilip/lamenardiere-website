<nav class='navbar' role='navigation' aria-label='main navigation'>
  <div class='navbar-brand'>
    <a class='navbar-item' href='/'>
      <div class='title'>Chateau de la Ménardière</div>
    </a>

    <a role='button' class='navbar-burger burger' aria-label='menu' aria-expanded='false' data-target='navbarBasicExample'>
      <span aria-hidden='true'></span>
      <span aria-hidden='true'></span>
      <span aria-hidden='true'></span>
    </a>
  </div>

  <div id='navbarBasicExample' class='navbar-menu'>
    <div class='navbar-start'>
      <% data.menus.each do |item| -%>
        <% if item.class == String -%>
          <div class='navbar-item'>
            <a class='navbar-item' href='/<%= item.parameterize.underscore %>.html'><%= item %></a>
          </div>
        <% else -%>
          <% title, subitems = item.keys.first, item.values.first -%>
          <div class="navbar-item has-dropdown is-hoverable">
            <a class="navbar-link"><%= title %></a>
            <div class="navbar-dropdown">
              <% subitems.each do |subitem| -%>
                <a class='navbar-item' href='/<%= subitem.parameterize.underscore %>.html'><%= subitem %></a>
              <% end -%>
            </div>
          </div>
        <% end -%>
      <% end -%>
    </div>

    <div class='navbar-end'>
      <div class='navbar-item'>
        <a class='navbar-item' href='#'>English</a>
      </div>
    </div>
  </div>

</nav>
